+		return TEE_ERROR_BAD_PARAMETERS;
+	}
+
+	if (blob->length > (payload->length + BLOB_BPAD_SIZE)) {
+		LIB_TRACE("Payload length too short");
+		return TEE_ERROR_SHORT_BUFFER;
+	}
